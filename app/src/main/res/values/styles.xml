<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <!-- 底部tabbar 的样式-->
    <style name="main_tab">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">12sp</item>
        <item name="android:paddingTop">5dip</item>
        <item name="android:background">@drawable/bottombar_backgroundcolor_selector</item>
        <item name="android:textColor">@color/bottombar_textcolor_selector</item>
        <item name="android:button">@null</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>

    <style name="SlidingTextViewStyle" parent="@android:style/Widget.TextView">
        <item name="android:textColor">#FFF</item>
    </style>

    <style name="nomarl_style_warp">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>
    <style name="nomarl_style_fill">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">fill_parent</item>
    </style>
    <style name="nomarl_style_hight_fill">
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_width">wrap_content</item>
    </style>
    <style name="nomarl_style_all_fill">
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_width">fill_parent</item>
    </style>

    <!-- 我的 textview-->
    <style name="my_textveiw_bar" parent="@android:style/Widget.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">12sp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_weight">1</item>
        <item name="android:lines">1</item>
        <item name="android:textColor">@color/bottombar_textcolor_selector</item>

    </style>

    <style name="layout_item_match_parent">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="layout_item_height_match_parent" parent="layout_item_match_parent">
        <item name="android:layout_height">38dip</item>
    </style>

    <!-- 登录含edittext的layout-->
    <style name="layout_login_edit">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <!-- 通用textview（左侧  登录界面、收货地址管理）-->
    <style name="warp_tv_pub_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">left</item>
        <item name="android:textColor">@color/listtab_off</item>
        <item name="android:lines">1</item>
    </style>

    <!-- 通用edittext （注册、收获地址编辑）-->
    <style name="warp_edittext_pub_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:background">@null</item>
        <item name="android:gravity">right</item>
        <item name="android:lines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">@color/listtab_off</item>
    </style>

    <!-- 通用textview（如支付act中的二级标题）-->
    <style name="warp_tv_pub">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/listtab_off</item>
        <item name="android:lines">1</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
    </style>

    <!-- 首页轮播图下 三个 按钮-->
    <style name="bar_style" parent="nomarl_style_warp">
        <item name="android:layout_weight">1</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:gravity">center</item>
        <item name="android:button">@null</item>
        <item name="android:paddingLeft">10dip</item>
        <item name="android:textSize">12dip</item>
    </style>

    <!-- 首页中 没个栏目的标题 粉色分隔-->
    <style name="main_tab_item_press" parent="nomarl_style_warp">
        <item name="android:textSize">15dip</item>
        <item name="android:textColor">@color/bgColor</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="main_tab_item_nomarl" parent="nomarl_style_warp">
        <item name="android:textSize">15dip</item>
        <item name="android:textColor">@color/listtab_off</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="main_tab_item_btn_press" parent="main_tab_item_btn_press">
        <item name="android:background">@color/white</item>
        <item name="android:textColor">@color/bottombar_textcolor_selector</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">30dip</item>
        <item name="android:gravity">center</item>
        <item name="android:button">@null</item>
        <item name="android:textSize">15dip</item>
    </style>

    <!-- 主页中的揭晓页面 -->
    <style name="publish_tab_item_left" parent="nomarl_style_warp">
        <item name="android:textSize">12dip</item>
        <item name="android:textColor">#969696</item>
        <item name="android:layout_width">60dip</item>
    </style>

    <style name="publish_tab_item_right" parent="nomarl_style_fill">
        <item name="android:textSize">12dip</item>
        <item name="android:textColor">#969696</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
    </style>

    <!-- 带有线框的textview按钮，如充值金额-->
    <style name="text_box_bt" parent="@android:style/Widget.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@drawable/red_textview_select_bt</item>
        <item name="android:gravity">center</item>
        <item name="android:lines">1</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="show_oper_btn" parent="nomarl_style_warp" >
        <item name="android:textSize">12dp</item>
        <item name="android:textColor">@drawable/red_textview_select_bt</item>
        <item name="android:background">@drawable/border_box_red_bg</item>
        <item name="android:layout_margin">5dip</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="count_info_btn" parent="nomarl_style_warp" >
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">@drawable/red_textview_select_bt</item>
        <item name="android:background">@drawable/countinfo_bg</item>
        <item name="android:layout_margin">5dip</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- 标签分页按钮-->
    <style name="bt_select_page">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- viewpage tab字体 -->
    <style name="home_page_tab_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/listtab_off</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- viewpage tab下img -->
    <style name="home_page_tab_img">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">3dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <!-- viewpage中的listview item 左侧图片 -->
    <style name="page_list_left_img">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">100dp</item>
    </style>

    <!-- 正常线框  按下红色bt通用，whidth需设置，默认match_parent-->
    <style name="bt_red_public">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/bt_whilt_round_bg</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:textColor">@color/listtab_off</item>
        <!--<item name="android:textColor">@drawable/bt_text_select</item>-->
    </style>

    <!-- 正常红色  按下深红  bt通用，whidth需设置，默认match_parent-->
    <style name="bt_red_to_red_public">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/bt_red_to_red_select</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingTop">7dp</item>
        <item name="android:paddingBottom">7dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>

    <!-- layout item -->
    <style name="bt_layout_item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">20dp</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- 支付页面-->
    <style name="pay_left_style">
        <item name="android:layout_width">100dip</item>
        <item name="android:layout_height">40dip</item>
        <item name="android:textSize">15dip</item>
        <item name="android:textColor">#999999</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">5dip</item>
    </style>

    <style name="pay_right_style">
        <item name="android:layout_width">100dip</item>
        <item name="android:layout_height">40dip</item>
        <item name="android:textSize">15dip</item>
        <item name="android:textColor">#333333</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">10dip</item>
    </style>

    <!-- listview 标题-->
    <style name="text_title_line_two">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLines">2</item>
        <item name="android:textSize">14sp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <!-- listview layoutitem bt -->
    <style name="text_title_line_context">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/listtab_off</item>
    </style>

    <!-- listview layoutitem bt -->
    <style name="listview_layout_item_bt">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="DialogStyle" parent="android:Theme.Holo.Light.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
        <item name="android:windowBackground">@color/transparent</item>
    </style>

    <!-- 我的界面中的登录 和 注册 -->
    <style name="me_login_ant_reg">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/bt_red</item>
        <item name="android:textSize">18sp</item>
    </style>

</resources>
