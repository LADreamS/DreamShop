<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <!-- 底部tabbar 的样式-->
    <style name="main_tab">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingTop">8dip</item>
        <item name="android:paddingBottom">4dip</item>
        <item name="android:background">@drawable/bottombar_backgroundcolor_selector</item>
        <item name="android:textColor">@color/bottombar_textcolor_selector</item>
        <item name="android:button">@null</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>

    <style name="SlidingTextViewStyle" parent="@android:style/Widget.TextView">
        <item name="android:textColor">#FFF</item>
    </style>

    <style name="nomarl_style_warp">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>
    <style name="nomarl_style_fill">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">fill_parent</item>
    </style>
    <style name="nomarl_style_all_fill">
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_width">fill_parent</item>
    </style>

    <!-- 我的 textview-->
    <style name="my_textveiw_bar" parent="@android:style/Widget.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">10sp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_weight">1</item>
        <item name="android:lines">1</item>
    </style>

    <style name="layout_item_match_parent">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">center_vertical</item>
    </style>


    <!-- 登录含edittext的layout-->
    <style name="layout_login_edit">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <!-- 登录界面通用字体-->
    <style name="login_tv_pub">
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- 注册edittext-->
    <style name="reg_edittext">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
        <item name="android:background">@null</item>
    </style>

    <!-- 首页轮播图下 三个 按钮-->
    <style name="bar_style" parent="nomarl_style_warp">
        <item name="android:layout_weight">1</item>
        <item name="android:background">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:button">@null</item>
    </style>

    <!-- 首页中 没个栏目的标题 粉色分隔-->
    <style name="main_tab_item_press" parent="nomarl_style_warp">
        <item name="android:textSize">18dip</item>
        <item name="android:textColor">@color/listtab_on</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="main_tab_item_nomarl" parent="nomarl_style_warp">
        <item name="android:textSize">18dip</item>
        <item name="android:textColor">@color/listtab_off</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="main_tab_item_btn_press" parent="main_tab_item_btn_press">
        <item name="android:background">@drawable/main_tab_btn_selector</item>
        <item name="android:textColor">@color/bottombar_textcolor_selector</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- 主页中的揭晓页面 -->
    <style name="publish_tab_item_left" parent="nomarl_style_warp">
        <item name="android:textSize">15dip</item>
        <item name="android:textColor">#ccc</item>
    </style>

    <style name="publish_tab_item_right" parent="nomarl_style_fill">
        <item name="android:textSize">15dip</item>
        <item name="android:textColor">#ccc</item>
        <item name="android:ellipsize">end</item>
    </style>

    <!-- 带有线框的textview按钮，如充值金额-->
    <style name="text_box_bt" parent="@android:style/Widget.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@drawable/red_textview_select_bt</item>
        <item name="android:gravity">center</item>
        <item name="android:lines">1</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:background">@drawable/border_box_red_bg</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="show_oper_btn" parent="nomarl_style_warp" >
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">@drawable/red_textview_select_bt</item>
        <item name="android:background">@drawable/border_box_red_select</item>
        <item name="android:layout_margin">5dip</item>
    </style>

</resources>
