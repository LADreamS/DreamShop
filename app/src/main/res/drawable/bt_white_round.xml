<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 选中红色圆角线框-->

    <solid android:color="@color/white"></solid>

    <!-- 圆角度数-->
    <corners android:radius="5.0dp" />

    <!-- 边框宽度和颜色-->
    <stroke
        android:width="1dp"
        android:color="@color/gray_row_color" />

    <!-- 围绕内容距离-->
    <padding
        android:bottom="1dp"
        android:left="1dp"
        android:right="1dp"
        android:top="1dp" />

</shape>