<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:bind="http://robobinding.org/android"
    tools:ignore="MissingPrefix">

    <!-- 晒单的头部信息-->
    <RelativeLayout
        style="@style/nomarl_style_fill"
        android:layout_height="80dip"
        >
        <com.dream.views.imageview.DreamImageView
            android:id="@+id/img_hand"
            android:layout_width="48dip"
            android:layout_height="48dip"
            bind:url="{url}"
            bind:circle="{circle}"
            fresco:placeholderImage="@color/wait_color"
            fresco:placeholderImageScaleType="fitCenter"
            fresco:failureImage="@drawable/ic_launcher"
            fresco:failureImageScaleType="centerInside"
            android:layout_alignParentLeft="true"
            android:layout_margin="10dip"
            />
        <TextView
            style="@style/nomarl_style_fill"
            bind:text="{name}"
            android:layout_toRightOf="@+id/img_hand"
            android:layout_toLeftOf="@+id/time"
            android:layout_alignTop="@+id/img_hand"
            android:singleLine="true"
            android:ellipsize="end"
            />
        <TextView
            style="@style/nomarl_style_fill"
            bind:text="{des}"
            android:layout_toRightOf="@+id/img_hand"
            android:layout_alignBottom="@+id/img_hand"
            />
        <TextView
            android:id="@+id/time"
            style="@style/nomarl_style_warp"
            bind:text="{time}"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/img_hand"
            />
    </RelativeLayout>

    <GridView
        style="@style/nomarl_style_fill"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center"
        android:listSelector="@null"
        android:numColumns="3"
        bind:source="${imgdata}"
        bind:onItemClick="imgclick"
        bind:itemLayout="@layout/show_griditem"
        >
    </GridView>

    <LinearLayout
        style="@style/nomarl_style_fill"
        android:orientation="horizontal"
        >
        <Button
            android:id="@+id/praise"
            style="@style/show_oper_btn"
            bind:onClick="onclick"
            android:layout_weight="1"
            android:text="@string/show_prasie"
            />
        <Button
            android:id="@+id/comment"
            style="@style/show_oper_btn"
            bind:onClick="onclick"
            android:layout_weight="1"
            android:text="@string/show_comment"
            />
        <Button
            android:id="@+id/try_again"
            style="@style/show_oper_btn"
            bind:onClick="onclick"
            android:layout_weight="1"
            android:text="@string/show_try_again"
            />
    </LinearLayout>

</LinearLayout>